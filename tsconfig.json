{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*", "server/*"]
        }
    },
    "include": [
        "server/src/**/*.ts",
        "server/src/types/*.ts",
        "index.ts"
    ],
    "exclude": ["node_modules", ".vscode"]
}
